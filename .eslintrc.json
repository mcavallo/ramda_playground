{
  "root": true,
  "env": {
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "extends": "airbnb-base",
  "rules": {
    "semi": ["error", "never"],
    "comma-dangle": ["error", "never"],
    "implicit-arrow-linebreak": "off",
    "function-paren-newline": "off",
    "object-curly-newline": [
      "error", {
        "ObjectExpression": "always",
        "ObjectPattern": {"multiline": false}
      }
    ]
  }
}
